<script src="../js/jquery-3.7.0.js"></script>
<script>
	// 이벤트를 연결합니다.
	$(document).ready(function() {
		//이벤트를 연결합니다.

		$('textarea').keyup(function() {
			//남은 글자 수를 구합니다.
			const inputLength = $(this).val().length;
			const remain = $(this).attr('maxLength') - inputLength;
			
			//문서 객체에 입력합니다.
			$('h3').html("남은 글자수 : <span>" + remain + "</span>")
					.css('width','10em');

			  });
			});
</script>
