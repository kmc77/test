<script>
	// 이벤트를 연결합니다.
	$(document).ready(function() {
  $('img').attr("src", function(index, attrValue) {
    let s = `index = ${index}, attribute value = ${attrValue}`;
    console.log(s);
  }); // attr()
}); // ready
</script>
</head>
